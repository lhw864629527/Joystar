<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qzone_send_vide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical"
    tools:context="com.erbao.joystar.moudule.qzone.activity.QzoneSendVideActivity">


    <include
        layout="@layout/handview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qzonesendvido_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/circle_bg_img" />

            <TextView
                android:id="@+id/qzonesendvido_permiss"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_normaldd"
                android:gravity="center"
                android:text="@string/publics"
                android:textColor="@color/color_White"
                android:textSize="15dp" />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/qzonesendvido_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.erbao.videoimg.views.VideoPreviewView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="350dp" />



                    <EditText
                        android:id="@+id/qzonesendvido_edt"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_white"
                        android:gravity="start"
                        android:hint="@string/Say_something"
                        android:padding="10dp"
                        android:textColor="@color/color_Blackfont"
                        android:textColorHint="@color/color_Gray"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/qzonesendvido_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangji_icon"

                        />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>
